<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_layout_5"
        app:layout_constraintTop_toTopOf="@+id/gl3"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintEnd_toEndOf="@+id/gl2"
        app:layout_constraintBottom_toBottomOf="@id/gl4"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu solicitud ha sido enviada!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        app:layout_constraintTop_toTopOf="@id/gl3"
        app:layout_constraintStart_toStartOf="@id/gl1"
        app:layout_constraintEnd_toEndOf="@+id/gl2"
        app:layout_constraintBottom_toBottomOf="@+id/gl4"
        app:layout_constraintVertical_bias="0.1"
        />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:text="El personal de la administración estará revisando tu solicitud"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/gl1"
        app:layout_constraintEnd_toEndOf="@+id/gl2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>