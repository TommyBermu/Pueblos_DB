<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nombre_libro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="Nombre del Libro"
            android:textSize="26sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/description_libro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="Descripción"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/nombre_libro" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDownloadBook"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:text="Leer libro aquí"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_3"
            app:layout_constraintTop_toBottomOf="@id/description_libro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.8"/>

        <View
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_margin="10dp"/>

</LinearLayout>