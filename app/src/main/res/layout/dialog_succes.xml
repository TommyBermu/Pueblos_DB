<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_layout_5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_keyboard_double_arrow_up_24"
            app:tint="@color/blue_sky" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Tu solicitud ha sido enviada!"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:layout_width="260dp"
            android:maxWidth="260dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="El personal de la administración estará revisando tu solicitud"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEntendido"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Entendido"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_button_3"/>

    </LinearLayout>

</RelativeLayout>